curl -XPUT "http://localhost:9200/uir_index3" -d'
{
   "settings": {
      "analysis": {
         "filter": {
            "nGram_filter": {
               "type": "nGram",
               "min_gram": 2,
               "max_gram": 20,
               "token_chars": [
                  "letter",
                  "digit",
                  "punctuation",
                  "symbol"
               ]
            },

            "synonym_filter" : {
              "type" : "synonym",
              "synonyms_path" : "synonyms.txt",
              "ignore_case": true
          }

         },
         "analyzer": {
            "nGram_analyzer": {
               "type": "custom",
               "tokenizer": "whitespace",
               "filter": [
                  "lowercase",
                  "asciifolding",
                  "nGram_filter"
               ]
            },
            "whitespace_analyzer": {
               "type": "custom",
               "tokenizer": "whitespace",
               "filter": [
                  "lowercase",
                  "asciifolding"
               ]
            },
            "synonym_analyzer": {
            "tokenizer": "whitespace",
            "filter": ["synonym_filter"]
          }
         }
      }
   },
   "mappings": {
      "articles": {
         "_all": {
            "index_analyzer": "nGram_analyzer",
            "search_analyzer": "whitespace_analyzer",
            "analyzer": "synonym_analyzer"
         },
         "properties": {
           "url": {
               "type": "string",
               "index": "no",
               "include_in_all": false
            },
            "title": {
               "type": "string",
               "index": "not_analyzed"
            }
         }
       }
     }
}'
